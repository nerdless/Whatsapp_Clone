<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:id="@+id/imageURL"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chat Title"
        android:id="@+id/chat_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageURL"
        android:layout_toEndOf="@+id/imageURL" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="msg_status"
        android:id="@+id/msg_status"
        android:layout_alignBottom="@+id/imageURL"
        android:layout_toRightOf="@+id/imageURL"
        android:layout_toEndOf="@+id/imageURL" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Msg Content"
        android:id="@+id/msg_content"
        android:layout_alignBottom="@+id/imageURL"
        android:layout_toRightOf="@+id/msg_status"
        android:layout_toEndOf="@+id/msg_status"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Last Msg Date"
        android:id="@+id/last_msg_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>